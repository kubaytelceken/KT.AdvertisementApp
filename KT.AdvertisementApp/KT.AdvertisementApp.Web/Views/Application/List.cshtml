@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}

<div class="container-fluid">
    @{
        if (Model?.Count > 0)
        {
            <div class="text-end my-3 p-1">
                <a asp-action="Create" asp-controller="Application" class="btn btn-success btn-sm">Yeni İlan Oluştur</a>
                
            </div>

            <table class="mt-3 table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Durumu</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                        <td>@(item.Status?"Aktif":"Pasif")</td>

                        <td>
                            <a class="btn btn-success btn-sm" asp-controller="Application" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                            <a class="btn btn-danger btn-sm" asp-controller="Application" asp-action="Remove" asp-route-id="@item.Id">Sil</a>

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        { <div class="text-end my-3 p-1">
    <a asp-action="Create" asp-controller="Application" class="btn btn-success btn-sm">Yeni İlan Oluştur</a>

</div>
            <div class="mt-3 text-center lead">
                <label>Herhangi bir ilan bulunmamaktadır.</label>
            </div>
        }
    }
</div>


